---
import AppLayout from '@/layouts/AppLayout.astro';
import { TrainingList } from '@/components/features/trainings/TrainingList';
import { PeriodExportDialog } from '@/components/features/pdf/PeriodExportDialog';
---

<AppLayout title="Treningi">
  <div class="max-w-3xl mx-auto">
    <div class="flex items-center justify-between mb-6">
      <h1 class="text-2xl font-bold text-gray-900">Moje treningi</h1>
      <div class="flex gap-2">
        <button
          id="export-report-btn"
          class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 hover:bg-gray-50 rounded-lg transition-colors"
        >
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
            />
          </svg>
          Eksportuj raport
        </button>
        <a
          href="/trainings/new"
          class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-primary-600 hover:bg-primary-700 rounded-lg transition-colors"
        >
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Dodaj trening
        </a>
      </div>
    </div>

    <TrainingList client:load />
    <PeriodExportDialog client:load />
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const exportBtn = document.getElementById('export-report-btn');
      if (exportBtn) {
        exportBtn.addEventListener('click', () => {
          window.dispatchEvent(new CustomEvent('open-period-export'));
        });
      }
    });
  </script>
</AppLayout>
