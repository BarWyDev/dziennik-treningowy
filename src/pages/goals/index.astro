---
import AppLayout from '@/layouts/AppLayout.astro';
import { GoalList } from '@/components/features/goals/GoalList';
---

<AppLayout title="Cele">
  <div class="max-w-2xl mx-auto">
    <div class="mb-6">
      <h1 class="text-2xl lg:text-3xl font-bold text-gray-900 dark:text-gray-100">Moje cele</h1>
      <p class="text-gray-600 dark:text-gray-400 mt-1 text-base lg:text-lg">Wyznaczaj cele i śledź swoje postępy</p>
    </div>

    <GoalList client:load />
  </div>
</AppLayout>
