---
import '@/styles/globals.css';
import { ResetPasswordForm } from '@/components/features/auth/ResetPasswordForm';

const token = Astro.url.searchParams.get('token') || '';
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Nowe hasło - Dziennik Treningowy</title>
    <meta name="description" content="Ustaw nowe hasło do Dziennika Treningowego" />
  </head>
  <body class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-md">
      <h1 class="text-center text-3xl font-bold text-gray-900">Dziennik Treningowy</h1>
      <h2 class="mt-6 text-center text-2xl font-semibold text-gray-900">
        Ustaw nowe hasło
      </h2>
    </div>

    <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
      <div class="bg-white py-8 px-4 shadow-sm rounded-xl sm:px-10 border border-gray-200">
        <ResetPasswordForm token={token} client:load />
      </div>
    </div>
  </body>
</html>
